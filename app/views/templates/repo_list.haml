%nav.repo-tools
  .search-wrapper
    %i.fa.fa-search
    %input.search{'type' => 'text', 'placeholder' => t('search_placeholder'), 'ng-model' => 'search.full_github_name'}
  .refresh-wrapper
    %button{'class' => 'refresh', 'ng-click' => 'sync()', 'ng-disabled' => 'syncingRepos'}
      %span {{ syncButtonText }}

.loading{'ng-show' => 'syncingRepos'}
  .dot
  .dot
  .dot

%ul.repos{'ng-hide' => 'syncingRepos'}
  %li.repo{'repo' => '',
    'ng-repeat' => 'repo in filteredRepos = (repos | filter:search | limitTo:10)',
    'ng-class' => '{active: repo.active, processing: processing}'}
  %li.footer
    Showing {{filteredRepos.length}} of {{repos.length}}

= render 'preload_template', template: 'repo'
